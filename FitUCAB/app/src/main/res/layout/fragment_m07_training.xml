<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Fragments.M07.M07TrainingFragment">

    <!-- TODO: Update blank fragment layout -->


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="120dp">


        <ImageButton
            android:id="@+id/btn_m07_fechaInicio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/ic_launcher_date"/>


        <EditText
            android:id="@+id/tv_m07_fechaInicio"
            android:hint="Fecha inicio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"/>



        <ImageButton
            android:id="@+id/btn_m07_fechaFin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/ic_launcher_date"/>


        <EditText
            android:id="@+id/tv_m07_fechaFin"
            android:hint="Fecha fin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"/>


        <ImageButton
            android:id="@+id/btn_m07_horaInicio"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/ic_launcher_time"/>

        <EditText
            android:id="@+id/tv_m07_horaInicio"
            android:hint="Hora inicio"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"/>


        <ImageButton
            android:id="@+id/btn_m07_horaFin"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@mipmap/ic_launcher_time"/>


        <EditText
            android:id="@+id/tv_m07_horaFin"
            android:hint="Hora fin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"/>


    </GridLayout>


    <Button
        android:id="@+id/btnAdd"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@color/colorBtnConfirmar"
        android:fontFamily="sans-serif"
        android:text="Agregar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.495" />


    <Button
        android:id="@+id/btnDecline"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@color/colorBtnDenegar"
        android:fontFamily="sans-serif"
        android:text="Declinar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:typeface="sans"
        app:layout_constraintRight_toLeftOf="@+id/btnAdd"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="180dp"
        android:layout_marginTop="400dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</FrameLayout>
