<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.fitucab.ds1617b.fitucab.UI.Fragments.M02.M02HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/cpb_m02_home"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:indeterminate="false"
            android:max="48"
            android:progress="46"
            android:progressDrawable="@drawable/circle_progress" />

        <ImageView
            android:id="@+id/iv_m02_home"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_calories"
            android:layout_above="@+id/tv_m02_home_calories"
            android:layout_alignRight="@+id/tv_m02_home_calorias"
            android:layout_alignEnd="@+id/tv_m02_home_calorias"
            android:layout_alignLeft="@+id/tv_m02_home_calorias"
            android:layout_alignStart="@+id/tv_m02_home_calorias" />

        <TextView
            android:id="@+id/tv_m02_home_calorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_m02_home_calories"
            android:layout_alignLeft="@+id/tv_m02_home_calories"
            android:layout_alignRight="@+id/tv_m02_home_calories"
            android:layout_alignStart="@+id/tv_m02_home_calories"
            android:layout_alignTop="@+id/cpb_m02_home"
            android:layout_marginTop="82dp"
            android:text="3000"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_m02_home_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_m02_home_calorias"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="@string/nav_02_calorias"
            android:textColor="@color/black" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cpb_m02_home"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/rl_m02_home_layout1"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/rl_m02_home_peso"
                    >

                    <ImageView
                        android:id="@+id/water"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_water" />

                    <TextView
                        android:id="@+id/tv_m02_home_water"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="0 ml !Toma AguaÂ¡" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_m02_home_peso"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                 >

                    <ImageView
                        android:id="@+id/fitness"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fitness" />

                    <TextView
                        android:id="@+id/tv_m02_home_peso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="68 kg" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_m02_home_water02"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/rl_m02_home_layout1"
                    android:layout_gravity="center_horizontal"
                    android:layout_toLeftOf="@+id/rl_m02_home_peso"
                    >

                    <ImageView
                        android:id="@+id/Account"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_m02_perfil" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_m02_home_training"
                    android:layout_width="190dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/Activitys"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:src="@drawable/ic_training" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/nav_02_entrenamiento" />

                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

</FrameLayout>
